# Configuração do Flask
# IMPORTANTE: Gere uma chave secreta forte e única para produção
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=sua-chave-secreta-aqui-mude-isso

# Banco de Dados
# Desenvolvimento: sqlite:///tarefas.db
# Produção: postgresql://usuario:senha@localhost/nome_banco
DATABASE_URL=sqlite:///tarefas.db

# Ambiente (development ou production)
FLASK_ENV=development

# Configurações de Segurança de Cookies (usar True em produção com HTTPS)
SESSION_COOKIE_SECURE=False
WTF_CSRF_SSL_STRICT=False

# Para produção com HTTPS, descomente e use:
# SESSION_COOKIE_SECURE=True
# WTF_CSRF_SSL_STRICT=True
# FLASK_ENV=production

# Permissões do Docker (para evitar arquivos criados como root)
# Use: id -u para obter seu UID e id -g para obter seu GID
UID=1000
GID=1000
